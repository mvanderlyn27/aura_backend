{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "sourceMap": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": ["index.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "tests", "build", "cloudrun_template", "src/**/*.test.ts"]
}
